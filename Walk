include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t,n;
    cin>>t;
    while(t--)
    {
      cin>>n;
      int v=0;
      for(int i=0;i<n;i++)
      {
          int w;
          cin>>w;
          int x=w+i;
          v=max(v,x);
      }
      cout<<v<<endl;
    }
}
